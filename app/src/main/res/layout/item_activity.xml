<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardActivity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textActivityName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="Golden Gate Bridge Walk" />

                <TextView
                    android:id="@+id/textCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    tools:text="ðŸžï¸ Outdoor" />

            </LinearLayout>

            <TextView
                android:id="@+id/textState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:text="âœ“ Selected"
                tools:visibility="visible" />

        </LinearLayout>

        <!-- Tags Section (NEW) -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupTags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:chipSpacing="4dp">

            <!-- Food Tag -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipFood"
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="false"
                android:text="ðŸ½ï¸ Food"
                android:textSize="11sp"
                android:visibility="gone"
                app:chipBackgroundColor="#FFE0B2"
                app:chipStrokeWidth="0dp" />

            <!-- Travel Tag -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipTravel"
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="false"
                android:text="ðŸš‡ Travel"
                android:textSize="11sp"
                android:visibility="gone"
                app:chipBackgroundColor="#BBDEFB"
                app:chipStrokeWidth="0dp" />

            <!-- Place Tag -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipPlace"
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="false"
                android:text="ðŸ“ Place"
                android:textSize="11sp"
                android:visibility="gone"
                app:chipBackgroundColor="#C8E6C9"
                app:chipStrokeWidth="0dp" />

            <!-- Free Tag -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipFree"
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="false"
                android:text="ðŸ†“ Free"
                android:textSize="11sp"
                android:visibility="gone"
                app:chipBackgroundColor="#E1F5E1"
                app:chipStrokeWidth="0dp" />

            <!-- Recommended Experience Tag (NEW) -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipRecommended"
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="false"
                android:textSize="11sp"
                android:visibility="gone"
                app:chipBackgroundColor="#FFF9C4"
                app:chipStrokeWidth="0dp"
                tools:text="â­ Best at sunset" />

        </com.google.android.material.chip.ChipGroup>

        <!-- Expandable Description Section (NEW) -->
        <LinearLayout
            android:id="@+id/layoutDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider" />

            <TextView
                android:id="@+id/textDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                tools:text="Iconic bridge with stunning bay views. Perfect for the sunny weather!" />

        </LinearLayout>

        <!-- Details Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textTimeSlot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                tools:text="â° 10:00 AM - 11:30 AM (1h 30m)" />

            <TextView
                android:id="@+id/textCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                tools:text="ðŸ†“ Free ðŸŽ“" />

            <TextView
                android:id="@+id/textLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                tools:text="ðŸ“ Golden Gate Bridge" />

            <!-- Travel Time (conditional) -->
            <LinearLayout
                android:id="@+id/layoutTravelTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/travel_time_background"
                android:orientation="horizontal"
                android:padding="8dp"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/textTravelTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:text="ðŸš‡ 15 min travel" />

            </LinearLayout>

            <!-- Early Departure Warning (NEW) -->
            <LinearLayout
                android:id="@+id/layoutEarlyWarning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/warning_background"
                android:orientation="horizontal"
                android:padding="8dp"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/textEarlyWarning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/warning"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:text="âš ï¸ Leave 45 min early (Depart at 8:15 AM)" />

            </LinearLayout>

        </LinearLayout>

        <!-- Action Button -->
        <Button
            android:id="@+id/btnAction"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:text="Add"
            android:textAllCaps="false"
            tools:text="Add" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>